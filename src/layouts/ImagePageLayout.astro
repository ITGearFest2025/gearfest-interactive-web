---
import Layout from "./Layout.astro";

import { Image } from "astro:assets";

interface Props {
  title?: string;
  redirectUrl?: string;
  redirectInterval?: number;
  image: ImageMetadata;
  imageLowRes?: ImageMetadata;
  backgroundColor?: string;
}

const {
  title,
  redirectUrl,
  redirectInterval,
  image,
  imageLowRes,
  backgroundColor = "#000",
} = Astro.props;
---

<Layout title={title}>
  <div
    class="absolute z-10 h-full w-full bg-cover bg-center bg-repeat"
    style={`background-image: url(${imageLowRes ? imageLowRes.src : image.src});`}
  >
    <Image src={image} alt="background" class="h-full w-full object-cover" />
    <slot />
  </div>
  {
    imageLowRes && (
      <>
        <link
          rel="preload"
          href={imageLowRes.src}
          as="image"
          fetchpriority="high"
          slot="head"
        />
        <img
          src={imageLowRes.src}
          class="h-full w-full object-cover"
          alt="Preload low-res"
        />
      </>
    )
  }
  <div
    class="fixed inset-0 -z-50"
    style={`background-color: ${backgroundColor};`}
  >
  </div>
</Layout>
