---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
interface Props {
  title?: string;
}
const { title = "Astro App" } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="font-italiana relative mx-auto flex min-h-screen w-full max-w-[430px]"
      transition:animate="initial"
    >
      <slot />
    </main>
  </body>
</html>
