---
import { ClientRouter, fade, slide } from "astro:transitions";
import "@/styles/global.css";
interface Props {
  title?: string;
}
const { title = "Astro App" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="absolute left-1/2 flex min-h-dvh w-full max-w-md -translate-x-1/2 bg-red-100"
      transition:animate={fade({ duration: "0.4s" })}
    >
      <slot />
    </main>
  </body>
</html>
