---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import BackgroundImage from "@/assets/story/scene2/02-04.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
import TextBoxWrapper from "@/components/StoryText/TextBoxWrapper.astro";
---

<ImagePageLayout title="from Scar to Star" image={BackgroundImage}>
  <TextBoxWrapper>
    <TextBox type="box">
      <p class="rounded-md border-2 border-black bg-white px-4 py-2">แค่ก ๆๆ</p>
    </TextBox>
    <TextBox type="box">
      <p class="rounded-md border-2 border-black bg-neutral-300 px-4 py-2">
        นี่มันอะไรกัน?
      </p>
    </TextBox>
  </TextBoxWrapper>
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/02-05"
    position="right"
    color="white"
    client:load
  />
</ImagePageLayout>
