---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene6/2_hd.webp";
import ImageLowRes from "@/assets/story/scene6/2_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <TextBox
    type="low-bottom"
    word={["ทำไมชิ้นส่วนที่ได้มา", "ดูเหมือนจะดึงดูดกัน"]}
    theme="dark"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene6/6-4"
    position="right"
    client:load
  />
</ImagePageLayout>
