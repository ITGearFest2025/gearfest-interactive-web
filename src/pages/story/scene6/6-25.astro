---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene6/5_loop_hd.webp";
import ImageLowRes from "@/assets/story/scene6/5_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
---

<ImagePageLayout
  title="from Scar to Star"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <TextBox
    type="low-bottom"
    word={["ได้ทำให้คุณ", "เปล่งประกายที่สุดแล้ว"]}
    theme="light"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene6/6-26"
    position="right"
    client:load
  />
</ImagePageLayout>
