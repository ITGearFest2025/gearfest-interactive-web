---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene5/7_hd.webp";
import ImageLowRes from "@/assets/story/scene5/7_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <TextBox
    type="low-bottom"
    word={["ก็เลยแอบเครียดๆ", "หมดไฟนิดหน่อยค่ะ"]}
    theme="light"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene5/5-15-2"
    position="right"
    client:load
  />
</ImagePageLayout>
