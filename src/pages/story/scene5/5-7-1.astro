---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene5/4_hd.webp";
import ImageLowRes from "@/assets/story/scene5/4_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/TextBox/TextBox";
import Preload from "@/assets/story/scene5/5_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <TextBox
    type="low-bottom"
    word={["อันนี้คุณลูกค้าสนใจ", "จะใช้สูทในโอกาสไหนหรอ"]}
    theme="dark"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene5/5-8-1"
    position="right"
    client:load
  />
</ImagePageLayout>
