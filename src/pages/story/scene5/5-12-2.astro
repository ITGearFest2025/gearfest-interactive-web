import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/TextBox/TextBox";
import Preload from "@/assets/story/scene5/7_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <TextBox type="low-bottom" word="พอดีมีสัมภาษณ์งานค่ะ" theme="light" />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene5/5-13-2"
