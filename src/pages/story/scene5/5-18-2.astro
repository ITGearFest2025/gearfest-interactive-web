---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene5/8_hd.webp";
import ImageLowRes from "@/assets/story/scene5/8_Image_LowRes.webp";
import Preload from "@/assets/story/scene5/9_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/TextBox/TextBox";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <TextBox
    type="low-bottom"
    word={["มั่นใจเข้าไว้ เธอต้อง", "ทำมันได้อย่างแน่นอน"]}
    theme="dark"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene5/5-19"
    position="right"
    client:load
  />
</ImagePageLayout>
