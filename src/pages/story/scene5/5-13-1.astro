    type="low-bottom"
    word={["สูทตัวนี้ดูเหมาะกับ", "คุณลูกค้าพอดีเลย"]}
    theme="dark"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene5/5-14-1"
    position="right"
    client:load
  />
</ImagePageLayout>
