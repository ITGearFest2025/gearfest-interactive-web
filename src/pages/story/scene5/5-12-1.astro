---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene5/7_hd.webp";
import ImageLowRes from "@/assets/story/scene5/7_Image_LowRes.webp";
import AnswerComponent from "@/components/Inputs/AnswerComponent";
import Preload from "@/assets/story/scene5/8_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <AnswerComponent
    question="เธอดูกดดันกับการสัมภาษณ์งาน คุณจะพูดปลอบเธออย่างไร?"
    redirectUrl="/story/scene5/5-13-1"
    theme="light"
    answers={[
      {
        text: "ถ้าเขาเรียกไปสัมภาษณ์ แสดงว่าเขาสนใจในตัวคุณแล้ว กล้าๆ เข้าไว้",
        attribute: [3, 2, 1, 1, 1, 2, 2, 2, 1],
      },
      {
        text: "ลองฝึกพูดกับเตรียมตัวไปเยอะๆ ดีไหม มันจะช่วยทำให้ไม่ตื่นเต้นได้นะ",
        attribute: [1, 3, 3, 2, 3, 2, 2, 1, 1],
      },
      {
        text: "ก็ถือว่าเป็นหนึ่งในด่านที่ต้องผ่านไปให้ได้! เธอทำได้อยู่แล้ว สู้ๆ!",
        attribute: [2, 2, 2, 3, 3, 2, 1, 2, 2],
      },
      {
        text: "ไม่ว่าผลลัพธ์จะออกมาเป็นยังไง ทำให้เต็มที่ที่สุดก็พอ เป็นกำลังใจให้นะ",
        attribute: [0, 1, 0, 1, 0, 3, 2, 1, 2],
      },
    ]}
    client:load
  />
</ImagePageLayout>
