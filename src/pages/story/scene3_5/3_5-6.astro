---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import ImageHd from "@/assets/story/scene3_5/3ทางเดิน_oneshot_hd.webp";
import ImageLowRes from "@/assets/story/scene3_5/3ทางเดิน_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import Fadeout from "@/assets/story/scene3_5/2ได้จิ๊กซอว์_hd.webp";
import { Image } from "astro:assets";
import Preload from "@/assets/story/scene3_5/3ทางเดิน_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={ImageHd}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <Image
    src={Fadeout}
    class="animate-shortFadeOut absolute h-full w-full object-cover"
    alt="fade image"
  />
  <ContinueButton
    delay={1.5}
    redirectUrl="/story/scene3_5/3_5-7"
    position="right"
    client:load
  />
</ImagePageLayout>
