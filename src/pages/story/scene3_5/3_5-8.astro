---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import ImageHd from "@/assets/story/scene3_5/4ประตูใหม่_hd.webp";
import ImageLowRes from "@/assets/story/scene3_5/4ประตูใหม่_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import Fadeout from "@/assets/story/scene3_5/3ทางเดิน_hd.webp";
import { Image } from "astro:assets";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={ImageHd}
  imageLowRes={ImageLowRes}
>
  <Image
    src={Fadeout}
    class="animate-shortFadeOut absolute h-full w-full object-cover"
    alt="fade image"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene3_5/3_5-9"
    position="right"
    client:load
  />
</ImagePageLayout>
