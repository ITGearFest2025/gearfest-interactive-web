---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/6_hd.webp";
import ImageLowRes from "@/assets/story/scene4/6_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/TextBox/TextBox";
import Preload from "@/assets/story/scene4/7_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <TextBox
    type="high-top"
    word={["เพราะแต่ละคนก็ดู", "มีกลุ่มกันไปหมดแล้ว"]}
    theme="light"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4/4-12-1"
    position="right"
    client:load
  />
</ImagePageLayout>
