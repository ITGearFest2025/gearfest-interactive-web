---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/S4_3sec_oneshot_hd.webp";
import ImageLowRes from "@/assets/story/scene4/S4_3sec_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import Preload from "@/assets/story/scene4/1_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <ContinueButton
    delay={5}
    redirectUrl="/story/scene4/4-2"
    position="right"
    client:load
  />
</ImagePageLayout>
