---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/7_hd.webp";
import ImageLowRes from "@/assets/story/scene4/7_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/TextBox/TextBox";
import Preload from "@/assets/story/scene4/8_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <TextBox
    type="low-bottom"
    word={["คิดในแง่ดี อย่างน้อย", "เธอก็ได้ความรู้เพิ่มจากเมื่อก่อนนะ"]}
    theme="dark"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4/4-14-2"
    position="right"
    client:load
  />
</ImagePageLayout>
