---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/7_hd.webp";
import ImageLowRes from "@/assets/story/scene4/7_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <TextBox
    type="low-bottom"
    word={["ไม่อย่างนั้น วันหลังชวนเรา", "มานั่งอ่านหนังสือด้วยก็ได้นะ"]}
    theme="dark"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4/4-16-1"
    position="right"
    client:load
  />
</ImagePageLayout>
