    type="high-top"
    word={["แต่ดันไม่รู้สึกสนิท", "กับใครจริงๆ เลย"]}
    theme="light"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4/4-14-1"
    position="right"
    client:load
  />
</ImagePageLayout>
