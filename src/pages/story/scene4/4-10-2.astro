---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/6_hd.webp";
import ImageLowRes from "@/assets/story/scene4/6_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
---

<ImagePageLayout
  title="from Scar to Star"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <TextBox
    type="top"
    word={["ยังมีคนอื่นที่เก่งกว่า", "เยอะแยะเลย"]}
    theme="light"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4/4-11-2"
    position="right"
    client:load
  />
</ImagePageLayout>
