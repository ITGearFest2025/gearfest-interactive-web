---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/3_hd.webp";
import ImageLowRes from "@/assets/story/scene4/3_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import PlaySound from "@/components/Music/PlaySound";
import PaperSound from "@/assets/sound/Scene4Paperfall.webm";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4/4-6"
    position="right"
    client:load
  />
  <PlaySound src={PaperSound} client:only="react" />
</ImagePageLayout>
