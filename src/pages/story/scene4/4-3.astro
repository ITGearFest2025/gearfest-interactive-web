---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene4/1_hd.webp";
import ImageLowRes from "@/assets/story/scene4/1_Image_LowRes.webp";
import AnswerComponent from "@/components/Inputs/AnswerComponent";
import Preload from "@/assets/story/scene4/2_Image_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <AnswerComponent
    question="คุณเห็นเธอนั่งเงียบๆ อยู่เพียงคนเดียว คุณจึง..."
    redirectUrl="/story/scene4/4-4"
    theme="light"
    answers={[
      {
        text: "เดินเข้าไปหาเพื่อขอนั่งลงที่ที่ว่างตรงข้าม พร้อมยิ้มทักทายอย่างเป็นมิตร",
        attribute: [3, 1, 2, 1, 2, 3, 3, 0, 1],
      },
      {
        text: "สอบถามว่าที่นั่งตรงข้ามมีคนนั่งไหม และขอนั่งตรงข้ามอย่างเงียบๆ",
        attribute: [1, 3, 2, 1, 2, 1, 2, 0, 2],
      },
      {
        text: "สังเกตสีหน้าและอารมณ์ของคนตรงหน้า ก่อนจะหาจังหวะขอนั่งลงตรงข้าม",
        attribute: [2, 2, 3, 0, 3, 2, 2, 2, 2],
      },
      {
        text: "นั่งลงที่ที่นั่งว่างฝั่งตรงข้าม",
        attribute: [0, 1, 0, 0, 1, 0, 1, 1, 3],
      },
    ]}
    client:load
  />
</ImagePageLayout>
