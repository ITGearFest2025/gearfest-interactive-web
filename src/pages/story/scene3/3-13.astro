import TextBox from "@/components/TextBox/TextBox";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import Preload from "@/assets/story/scene3/7_LowRes.webp";
import Preload2 from "@/assets/story/scene3/7_oneshot_hd.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload, Preload2]}
>
