---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene3/1Animate_loop_hd.webp";
import ImageLowRes from "@/assets/story/scene3/1Animate_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <div class="animate-fadeOut absolute h-full w-full bg-white object-cover">
  </div>
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene3/3-2"
    position="right"
    color="black"
    client:load
  />
</ImagePageLayout>
