---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene3/4_hd.webp";
import ImageLowRes from "@/assets/story/scene3/4_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import TextBox from "@/components/StoryText/StoryText";
---

<ImagePageLayout
  title="from Scar to Star"
  image={Image}
  imageLowRes={ImageLowRes}
>
  <TextBox
    type="high-top"
    word={["คุณแม่บอกว่าให้รีบเรียน", "จะได้เก่งกว่าคนอื่น"]}
    theme="light"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene3/3-10-2"
    position="right"
    client:load
  />
</ImagePageLayout>
