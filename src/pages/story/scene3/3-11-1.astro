---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import Image from "@/assets/story/scene3/4_hd.webp";
import ImageLowRes from "@/assets/story/scene3/4_LowRes.webp";
import AnswerComponent from "@/components/Inputs/AnswerComponent";
import Preload from "@/assets/story/scene3/6_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={Image}
  imageLowRes={ImageLowRes}
  preloadImages={[Preload]}
>
  <AnswerComponent
    question="เด็กคนนี้ดูเศร้าที่ต้องทิ้งความชอบของตัวเอง คุณอยากพูดอะไร?"
    redirectUrl="/story/scene3/3-12"
    theme="light"
    answers={[
      {
        text: "แต่เธอวาดรูปน่ารักมากนะ!! วาดต่อไปเถอะ",
        attribute: [2, 1, 1, 2, 2, 1, 2, 1, 2],
      },
      {
        text: "ที่เธอทำไปก็เพราะมันทำให้เธอมีความสุข แค่นี้ก็พอแล้วไม่ใช่หรอ",
        attribute: [3, 3, 2, 1, 1, 2, 1, 3, 1],
      },
      {
        text: "อย่างน้อยเธอก็เก็บมันไว้เป็นงานอดิเรกได้นะ",
        attribute: [1, 0, 1, 3, 2, 2, 3, 1, 2],
      },
      {
        text: "วาดรูปต่อไปเถอะ อย่าไปสนใจคำพูดของคนอื่นเลย",
        attribute: [0, 1, 0, 0, 0, 0, 0, 0, 2],
      },
    ]}
    client:load
  />
</ImagePageLayout>
