---
import Layout from "@/layouts/Layout.astro";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import Sound from "@/assets/story/scene0/sound.svg";
import ResetScore from "@/components/ResetScore";
import Ios2 from "@/assets/story/scene0/ios2.webp";
---

<Layout title="Gear Festival 2025" preloadImages={[Ios2]}>
  <div
    class="font-mitr flex w-full flex-col items-center justify-center gap-4 text-white"
  >
    <Sound width={100} height={100} /><p class="text-xl">คำแนะนำ</p><p>
      เปิดเสียงเพื่อประสบการณ์ที่ดีขึ้น
    </p>
  </div>
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene0/0-2"
    position="right"
    client:load
  />
  <ResetScore client:load />
  <div class="fixed inset-0 -z-50 bg-black"></div>
</Layout>
