---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import ImageHD from "@/assets/story/scene1/2Walking.webp";
import Fadeout from "@/assets/story/scene1/1bartender_hd.webp";
import ImageLowRes from "@/assets/story/scene1/2-1WayBackHome_LowRes.webp";
import { Image } from "astro:assets";
import PreloadImage from "@/assets/story/scene1/2-2OneShot_LowRes.webp";
---

<ImagePageLayout
  title="Gear Festival 2025"
  class="animate-fadeIn"
  image={ImageHD}
  imageLowRes={ImageLowRes}
  preloadImages={[PreloadImage]}
>
  <Image
    src={Fadeout}
    class="animate-fadeOut absolute h-full w-full object-cover"
    alt="background fadeout"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene1/1-6"
    position="right"
    client:load
  />
</ImagePageLayout>
