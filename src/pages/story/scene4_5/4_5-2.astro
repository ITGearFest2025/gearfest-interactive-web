---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import ImageHd from "@/assets/story/scene4_5/2เจอจิ๊กซอว์_hd.webp";
import ImageLowRes from "@/assets/story/scene4_5/2เจอจิ๊กซอว์_Image_LowRes.webp";
import ContinueButton from "@/components/ContinueButton/ContinueButton";
import Fadeout from "@/assets/story/scene4_5/1ประตูเก่า_hd.webp";
import { Image } from "astro:assets";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={ImageHd}
  imageLowRes={ImageLowRes}
>
  <Image
    src={Fadeout}
    class="animate-shortFadeOut absolute h-full w-full object-cover"
    alt="fade image"
  />
  <ContinueButton
    delay={0.5}
    redirectUrl="/story/scene4_5/4_5-3"
    position="right"
    client:load
  />
</ImagePageLayout>
