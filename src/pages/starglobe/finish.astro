---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import BGstar from "@/assets/starglobe/bgstarglobe.png";
import ESC from "@/assets/landing/esc_hd.webp";
import GearFest from "@/assets/landing/gearfest_hd.webp";
import KNEng from "@/assets/landing/tueng_hd.webp";
import { Image } from "astro:assets";
import CloudTop from "@/assets/starglobe/top_cloud.svg";
import FinishGlobeView from "@/components/Starglobe/FinishGlobeView";
---

<ImagePageLayout image={BGstar}>
  <div class="fixed inset-0 w-full h-full overflow-hidden flex flex-col items-center text-white px-4 py-6 z-10">

    <div class="absolute top-0 left-0 w-full z-0 overflow-hidden pointer-events-none">
      <img
        src={CloudTop.src}
        alt="Cloud Background"
        class="w-full h-auto object-cover"
      />
    </div>

    <div class="absolute top-2 left-1/2 -translate-x-1/2 flex items-center justify-center gap-1.5 z-20">
      <Image src={ESC} alt="ESC" class="h-[41px] w-[65px]" />
      <Image src={GearFest} alt="GearFest" class="h-[98px] w-[98px]" />
      <Image src={KNEng} alt="KNEng" class="h-[55px] w-[55px]" />
    </div>

    <div class="absolute top-[200px] left-1/2 -translate-x-1/2 flex flex-col items-center">

      <h1 id="title-display" class="text-[28px] mercy-font text-center mb-[37px]">Title</h1>

      <div class="relative w-[295.31px] h-[295.31px] mb-[37px]">
        <FinishGlobeView client:load />
      </div>


      <div class="flex flex-col items-start gap-4 w-[347px]">

        <div class="w-full text-left">
          <p class="text-sm mb-1 font-petit">Title</p>
          <input
            id="title-input"
            type="text"
            placeholder="Enter your memory globe title"
            class="w-full px-2 pb-1 bg-transparent border-b border-white text-white text-left text-sm focus:outline-none"
          />
        </div>
    
        <div class="w-full flex flex-col items-center gap-y-[12px]">
          <div class="flex justify-between gap-3 w-full">
            <button
              class="w-[162px] h-[39px] text-center rounded-full text-white text-[20px] font-mercy border-2 border-white bg-[#1A193E] transition-all duration-300 hover:scale-110 active:scale-105"
              style="box-shadow: 0 0 10px 2px #E2C7E8; text-shadow: 0 0 10px #E2C7E8;"
            >
              Save a picture
            </button>
    
            <a
              href="/"
              class="w-[162px] h-[39px] text-center leading-[39px] rounded-full text-white text-[20px] font-mercy border-2 border-white bg-[#1A193E] transition-all duration-300 hover:scale-110 active:scale-105"
              style="box-shadow: 0 0 10px 2px #E2C7E8; text-shadow: 0 0 10px #E2C7E8;"
            >
              Back to home page
            </a>
          </div>
    
          <button
            class="w-full h-[47px] text-[24px] font-italiana text-white rounded-full border-2 border-white bg-[#1A193E] transition-all duration-300 hover:scale-110 active:scale-105 flex items-center justify-center"
            style="box-shadow: 0 0 10px 2px #E2C7E8; text-shadow: 0 0 10px #E2C7E8;"
          >
            Share in Memory Library
          </button>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    const titleInput = document.getElementById("title-input");
    const titleDisplay = document.getElementById("title-display");
    titleInput?.addEventListener("input", (e) => {
      titleDisplay.textContent = e.target.value || "Title";
    });
  </script>
</ImagePageLayout>
