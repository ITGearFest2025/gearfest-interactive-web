---
import { Image } from "astro:assets";
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import ImageHd from "@/assets/obj/bgobj.webp";
import Obj from "@/assets/obj/obj.webp";
import Navbar from "@/components/Navbar/Navbar";
import KeepButton from "@/components/KeepButton/KeepButton";
import ScanMoreItem from "@/components/KeepButton/ScanMoreItem";
import BackToHome from "@/components/KeepButton/BackToHome";
---

<ImagePageLayout
  title="Gear Festival 2025"
  image={ImageHd}
  class="hide-scrollbar h-full"
>
  <Navbar client:load />

  <div
    class="absolute top-0 right-0 left-0 flex flex-col items-center"
    style={{ backgroundImage: `url(${ImageHd.src})` }}
  >
    <h1 class="font-mercy pt-42 text-6xl text-white">Furby</h1>
    <a class="cursor-pointer pt-6" href="/">
      <Image src={Obj} alt="Obj" />
    </a>
    <div
      style={{
        textShadow: "0px 4px 4px rgba(0, 0, 0, 0.35)",
        background: "rgba(255, 255, 255, 0.1)",
      }}
      class="font-taviraj relative mt-8 flex h-[156px] w-[341px] flex-col items-center justify-center gap-[10px] rounded-xl bg-white text-[15px] font-medium text-white"
    >
      <p>
        lamos indo kinda <br />
        boxdsad sadsadsdad <br />
        dsadsadsd <br />
        dasdadsda<br />
        dsadds<br />
      </p>
    </div>
    <div class="mt-6">
      <KeepButton client:load />
    </div>
    <div class="mt-2 flex items-center justify-center gap-1">
      <ScanMoreItem client:load />
      <BackToHome client:load />
    </div>
  </div>
</ImagePageLayout>
