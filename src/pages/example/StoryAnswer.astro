---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import BackgroundImage from "@/assets/example/ExampleImage2.webp";
import AnswerComponent from "@/components/Inputs/AnswerComponent";
import TextBox from "@/components/TextBox/TextBox";
---

<ImagePageLayout title="Story" image={BackgroundImage}>
  <TextBox type="top">
    <p>เรื่องราวของภาพที่สอง</p>
  </TextBox>
  <AnswerComponent
    answers={[
      { text: "มีเรื่องราวลึกลับ น่าค้นหา", attribute: "type1" },
      { text: "เต็มไปด้วยการผจญภัย", attribute: "type2" },
      { text: "สัตว์ทุกตัวพูดได้เหมือนแมวนี่", attribute: "type3" },
      { text: "เป็นสวรรค์บนบก นรกบนดิน", attribute: "type4" },
    ]}
    redirectUrl="/story/1-02"
    client:only="react"
  />
</ImagePageLayout>
