---
import ImagePageLayout from "@/layouts/ImagePageLayout.astro";
import ImageHd from "@/assets/onsite/bg-onsite_hd.webp";
import ImageLowRes from "@/assets/onsite/bg-onsite_Image_LowRes.webp";
import ESC from "@/assets/landing/esc_hd.webp";
import GearFest from "@/assets/landing/gearfest_hd.webp";
import KNEng from "@/assets/landing/tueng_hd.webp";
import { Image } from "astro:assets";
import CloudTop from "@/assets/starglobe/top_cloud.svg";
import FinishGlobeView from "@/components/Starglobe/FinishGlobeView";
import Navbar from "@/components/Navbar/Navbar";
---

<ImagePageLayout
  image={ImageHd}
  imageLowRes={ImageLowRes}
  title="Create StarGlobe | Gear Festival 2025"
  class="h-full min-h-[932px] overflow-y-auto"
>
  <Navbar client:load />
  <div class="absolute top-0 right-0 left-0 flex h-full flex-col items-center">
    <div class="mt-4 flex w-auto items-center justify-center gap-1.5">
      <Image src={ESC} alt="ESC" class="h-[65px] w-[41px] object-cover" />
      <Image src={GearFest} alt="GearFest" class="h-[98px] w-[98px]" />
      <Image src={KNEng} alt="KNEng" class="h-[55px] w-[55px]" />
    </div>

    <div
      class="absolute top-[200px] left-1/2 flex -translate-x-1/2 flex-col items-center"
    >
      <h1
        id="title-display"
        class="mercy-font mb-[37px] text-center text-[28px] text-white"
      >
        Title
      </h1>

      <div class="relative mb-[37px] h-[295.31px] w-[295.31px]">
        <FinishGlobeView client:load />
      </div>

      <div class="flex w-[347px] flex-col items-start gap-4">
        <div class="w-full text-left">
          <p class="font-taviraj mb-1 text-2xl text-white">Title</p>
          <input
            id="title-input"
            type="text"
            placeholder="Enter your memory globe title"
            class="w-full border-b border-white bg-transparent px-2 pb-1 text-left text-lg text-white focus:outline-none"
          />
        </div>

        <div class="flex w-full flex-col items-center gap-y-[12px]">
          <button
            class="font-mercy h-[39px] w-full cursor-pointer rounded-full border-2 border-white text-center text-[20px] text-white transition-all duration-300 hover:scale-110 active:scale-105"
            style="box-shadow: 0 0 10px 2px #E2C7E8; text-shadow: 0 0 10px #E2C7E8;"
          >
            Save a picture
          </button>

          <a
            href="/"
            class="font-mercy h-[39px] w-full cursor-pointer rounded-full border-2 border-white text-center text-[20px] leading-[39px] text-white transition-all duration-300 hover:scale-110 active:scale-105"
            style="box-shadow: 0 0 10px 2px #E2C7E8; text-shadow: 0 0 10px #E2C7E8;"
          >
            Back to home page
          </a>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    const titleInput = document.getElementById("title-input");
    const titleDisplay = document.getElementById("title-display");
    titleInput?.addEventListener("input", (e) => {
      titleDisplay.textContent = e.target.value || "Title";
    });
  </script>
</ImagePageLayout>
